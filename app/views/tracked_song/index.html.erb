<%= render layout: "layouts/page" do %>
	<% if @tracked_song then %>
		<div class="w-full flex flex-col gap-y-4 items-center min-h-screen -mt-16 justify-center">
			<%= image_tag @tracked_song.song.art_url, class: "h-80 w-80 shadow-lg" %>
			<div class="flex flex-col items-center">
				<div class= "text-xl font-medium">
					<%= @tracked_song.song.name %>
				</div>
				<div class="text-gray-600">
					<%= @tracked_song.song.artist %>
				</div>
			</div>
			<%= button_to "Remove from leaderboard", "/tracked_song/#{@tracked_song.id}", class: "text-red-700 font-bold", method: :delete %>
		</div>
	<% else %>
		<div>No song found.</div>
	<% end %>
<%end%>
