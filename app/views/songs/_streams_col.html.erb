<td class="gap-1 whitespace-nowrap py-4 px-3 text-sm text-black justify-center" id="streams_song_<%=song.id%>">
	<% if song.song_streams.length > 1 %>
		<% daily_streams = number_with_delimiter((song.recent_daily_streams / song.stream_gap_days).to_i) %>
		<% total_streams = total_streams_readable song.recent_total_streams %>
		<% if !song.up_to_date %>
			<div class="flex flex-row justify-between text-md items-center">
				<div class="flex flex-col gap-1">
					<%= content_tag :div, daily_streams, class: "font-semibold" %>
					<%= content_tag :div, ("(" + total_streams + ")"), class: "text-gray-600" %>
				</div>
				<div class="flex flex-col text-xs font-gray-500 pt-1 text-right">
					<%= content_tag :div, song.present_gap_days != 0 ? "#{song.present_gap_days.to_i}D ago" : nil %>
					<%= content_tag :div, song.stream_gap_days != 1 ? "#{song.stream_gap_days.to_i}D average" : nil %>
				</div>
			</div>
		<% else %>
			<div class="text-md flex flex-row justify-between items-center">
				<div class="flex flex-col gap-1">
					<%= content_tag :div, daily_streams, class: "font-semibold" %>
					<%= content_tag :div, ("(" + total_streams + ")"), class: "text-gray-600" %>
				</div>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4 opacity-75 fill-green-600">
					<path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0112 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 013.498 1.307 4.491 4.491 0 011.307 3.497A4.49 4.49 0 0121.75 12a4.49 4.49 0 01-1.549 3.397 4.491 4.491 0 01-1.307 3.497 4.491 4.491 0 01-3.497 1.307A4.49 4.49 0 0112 21.75a4.49 4.49 0 01-3.397-1.549 4.49 4.49 0 01-3.498-1.306 4.491 4.491 0 01-1.307-3.498A4.49 4.49 0 012.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 011.307-3.497 4.49 4.49 0 013.497-1.307zm7.007 6.387a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
				</svg>
			</div>
		<% end %>
	<% else %>
		Not enough data
	<% end %>
</td>
