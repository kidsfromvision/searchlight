<td class="gap-1 whitespace-nowrap py-4 px-3 text-sm text-black justify-center" id="total_streams_song_<%=song.id%>">
	<% streams = number_with_delimiter(song.recent_total_streams) %>
	<% if !song.up_to_date %>
		<div class="text-black font-semibold text-md">
			<%= streams %>
		</div>
		<div class="flex flex-col text-xs font-gray-500 pt-1">
			<%= content_tag :div, song.present_gap_days != 0 ? "#{song.present_gap_days.to_i}D ago" : nil %>
		</div>
	<% else %>
		<div class="text-black font-semibold text-md flex flex-row justify-between items-center pr-2">
			<%= streams %>
		</div>
	<% end %>
</td>
