<%= render layout: "layouts/page" do %>
	<%= render "shared/page_head" %>
	<% if @label then %>
		<%= turbo_stream_from "label_leaderboard_#{@label.id}" %>
	<% else %>
		<%= turbo_stream_from "user_leaderboard_#{current_user.id}" %>
	<% end %>
	<%= turbo_stream_from "streams" %>
	<%= turbo_frame_tag "body" do %>
		<div class="flex flex-row justify-between items-baseline">
			<h1 class="text-2xl"> Leaderboard </h1>
			<%= button_to "Archives", archives_path, class: "text-black font-medium", data: { turbo_frame: "page", turbo_action: "advance" }, method: :get %>
		</div>
		<div class="mt-8 flex flex-col">
			<div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
	    		<%= render "songs/songs", songs: @songs %>
				</div>
			</div>
	  </div> 
	<% end %>
<% end %>

