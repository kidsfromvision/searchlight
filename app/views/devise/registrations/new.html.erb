<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<div class="flex flex-col gap-4 items-center justify-center mt-28">
		<%= image_tag("logo.svg")%>
		<h2 class="text-4xl" hidden>Searchlight</h2>

		<div class="flex flex-col gap-2">
		  <%= f.label :email %>
		  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
		</div>

		<div class="flex flex-col gap-2">
		  <%= f.label :password %>
		  <%= f.password_field :password, autocomplete: "new-password", class: "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
		</div>

		<div class="flex flex-col gap-2">
		  <%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
		</div>

		<div class="bg-black rounded px-4 py-2 w-80 text-white text-center cursor-pointer transition hover:bg-gray-700">
		  <%= f.submit "Sign up" %>
		</div>

		<%= render "devise/shared/error_messages", resource: resource %>
		<%= render "devise/shared/links" %>
	</div>
<% end %>
