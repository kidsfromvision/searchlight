
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	<div class="flex flex-col gap-4 items-center justify-center mt-28">
		<h2 class="text-2xl">Change your password</h2>
  	<%= f.hidden_field :reset_password_token %>

  	<div class="flex flex-col gap-2">
  	  <%= f.label :password, "New password" %>
  	  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
  	</div>

  	<div class="flex flex-col gap-2">
  	  <%= f.label :password_confirmation, "Confirm new password" %>
  	  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
  	</div>

  	<div class="bg-black rounded px-4 py-2 w-80 text-white text-center cursor-pointer transition hover:bg-gray-700">
  	  <%= f.submit "Change my password" %>
  	</div>
		<%= render "devise/shared/links" %>
  	<%= render "devise/shared/error_messages", resource: resource %>
	</div>
<% end %>

