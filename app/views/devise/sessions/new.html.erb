
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
	<div class="flex flex-col gap-4 items-center justify-center mt-16">
		<%= image_tag("logo.svg", alt: "searchlight logo")%>
		<h2 class="text-4xl" hidden>Searchlight</h2>
		
		<div class="space-y-2">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
		</div>

		<div class="space-y-2 transition ring-0 outline-none border-0">
			<%= f.label :password %><br />
			<%= f.password_field :password, autocomplete: "current-password", :class => "px-4 py-2 rounded bg-gray-100 w-80 border-0 focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0" %>
		</div>

		<% if devise_mapping.rememberable? %>
			<div class="w-80 flex flex-row justify-between items-center">
				<%= f.label :remember_me %>
				<%= f.check_box :remember_me, :class => "h-4 w-4"%>
			</div>
		<% end %>

		<div>
			<%= f.submit "Log in", :class => "bg-black rounded px-4 py-2 w-80 text-white cursor-pointer transition hover:bg-gray-700" %>
		</div>
		<%= render "devise/shared/links" %>
	</div>
<% end %>
