<div class="py-4 w-full flex flex-row justify-between items-center">
	<div class="hidden sm:inline-block">
		<% if current_user.label_id %>
			<% if asset_exists?(current_user.label.name + '.png') %>
				<%= image_tag current_user.label.name + '.png', class: "w-32"%>
			<% else %>
				<%= current_user.label.name %>
			<% end %>
		<% else %>
			<h2>Searchlight</h2>
		<%end%>
	</div>
	<%= form_with url: "/search", data: { turbo_frame: "body", turbo_action: "advance", controller: "search", action: "input->search#submit" }, method: :get do |form| %>
		<div class="flex flex-row items-center relative rounded-full bg-slate-100 sm:w-80 px-4 py-2 w-full">
 			<%= form.text_field :query, class: "rounded-full pl-0 pr-2 py-0 border-0 bg-slate-100 ring-0 w-full outline-none focus:ring-0 focus:ring-offset-0 focus:outline-none focus:border-0", placeholder: "Add a song" %>
 			<%= button_tag type: "submit", value: "search" do %>
  			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
				</svg>
  		<% end %>
		</div>
	<% end %>
</div>