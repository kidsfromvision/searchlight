<div class="py-4 w-full flex flex-row justify-between items-center">
	<div class="hidden sm:flex sm:flex-row sm:items-center sm:gap-x-5 sm:py-4">
		<% if current_user.label_id %>
			<% if asset_exists?(current_user.label.name + '.png') %>
				<%= image_tag current_user.label.name + '.png', class: "h-4 sm:h-8 lg:h-12", alt: "#{current_user.label.name} logo" %>
			<% else %>
				<%= current_user.label.name %>
			<% end %>
		<% else %>
			<h2>Searchlight</h2>
		<%end%>
		<svg width="1" height="64" viewBox="0 0 1 64" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect width="1" height="64" rx="0.5" fill="black"/>
		</svg>
		<%= render "songs/selector", is_label: is_label, is_archives: is_archives %>
		<svg width="1" height="64" viewBox="0 0 1 64" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect width="1" height="64" rx="0.5" fill="black"/>
		</svg>
		<h1 class="text-xl font-light"><%= is_archives ? "Archives" : "Leaderboard" %></h1>
	</div>
	<% unless is_archives %>
		<%= form_with url: "/search", data: { turbo_frame: "body", turbo_action: "advance", controller: "search", action: "input->search#submit" }, class: "flex flex-row items-center relative", method: :get do |form| %>
 			<%= form.text_field :query, class: "pl-4 pr-8 py-2 rounded-full w-full sm:w-80 border-[1px] border-white bg-slate-100 ring-0 w-full outline-none transition focus:border-black focus:bg-white focus:ring-0 focus:ring-offset-0 focus:outline-none text-sm", placeholder: "Add a song" %>
 			<%= button_tag type: "submit", aria: { label: "search" }, value: "search" do %>
  			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 absolute right-4 top-0 translate-y-2/3">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
				</svg>
  		<% end %>
		<% end %>
	<% end %>
</div>