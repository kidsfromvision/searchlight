<%= render layout: "layouts/page" do %>
	<div class="w-full flex flex-col gap-y-4 items-center min-h-screen -mt-16 justify-center">
		<%= image_tag @song.art_url, class: "h-80 w-80 shadow-lg" %>
		<div class="flex flex-col items-center">
			<div class= "text-xl font-medium">
				<%= @song.name %>
			</div>
			<div class="text-gray-600">
				<%= @song.artist %>
			</div>
		</div>
		<%= button_to "Remove from leaderboard", "/song/#{@song.id}", class: "text-red-700 font-bold", method: :delete %> 
	</div>
<%end%>
